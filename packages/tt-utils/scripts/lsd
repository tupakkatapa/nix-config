#!/usr/bin/env bash

set -o pipefail
trap 'exit 0' SIGINT

# Display usage information
display_usage() {
  cat <<USAGE
Usage: lsd

Description:
  Show disk usage for files and directories in the current directory.

Options:
  -h, --help
    Show this help message

Examples:
  lsd

USAGE
}

# Main function
main() {
  while [[ $# -gt 0 ]]; do
    case $1 in
    -h | --help)
      display_usage
      exit 0
      ;;
    *)
      echo "error: unknown option '$1'"
      echo "try '--help' for more information."
      exit 1
      ;;
    esac
  done

  du -Lhc --max-depth=0 ./*
}

main "$@"
